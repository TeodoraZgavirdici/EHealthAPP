<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EHealth.SignupPage"
             Title="Înregistrare">
    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Creare cont nou" FontSize="24" HorizontalOptions="Center"/>
        <Entry x:Name="NameEntry" Placeholder="Nume complet"/>
        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Parolă" IsPassword="True"/>
        <Button Text="Înregistrează-te" Clicked="OnSignupClicked"/>
        <Label x:Name="MessageLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>