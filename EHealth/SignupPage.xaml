<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EHealthApp.SignupPage"
             Title="Signup">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Creează cont nou" FontSize="22" HorizontalOptions="Center"/>

        <!-- Adaugă câmpul pentru Username -->
        <Entry x:Name="UsernameEntry" Placeholder="Username" Keyboard="Default"/>

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email"/>
        <Entry x:Name="PasswordEntry" Placeholder="Parolă" IsPassword="True"/>
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirmă parola" IsPassword="True"/>

        <Button Text="Creează cont"
                Clicked="OnSignupClicked"
                HorizontalOptions="FillAndExpand"/>

        <Button Text="Ai deja cont? Autentifică-te"
                Clicked="OnLoginClicked"
                HorizontalOptions="FillAndExpand"/>
    </VerticalStackLayout>
</ContentPage>