<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EHealthApp.MainPage"
             BackgroundColor="White">

    <Grid RowDefinitions="*, Auto" Padding="30">
        <!-- Logo centrat -->
        <Image Source="appicon.svg"
               HeightRequest="200"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Aspect="AspectFit" />

        <!-- Butoane jos -->
        <VerticalStackLayout Grid.Row="1"
                             Spacing="15"
                             VerticalOptions="End"
                             HorizontalOptions="FillAndExpand">
            <Button Text="Programări medicale"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="18"
                    Clicked="OnProgramariMedicaleClicked" />

            <Button Text="Documente medicale"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="10"
                    FontSize="18"
                    Clicked="OnDocumenteMedicaleClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
