<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EHealthApp.Converters"
    x:Class="EHealthApp.MedicalDocumentsPage"
    Title="Documente medicale"
    BackgroundColor="White">

    <ContentPage.Resources>
        <local:CategoryBgConverter x:Key="CategoryBgConverter" />
        <local:CategoryBorderConverter x:Key="CategoryBorderConverter" />
        <local:CategoryTextConverter x:Key="CategoryTextConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="18">

            <!-- Adaugă document medical DIN POZE -->
            <Button
                Text="Adaugă document medical"
                Clicked="OnAddPhotoPdfDocumentClicked"
                FontSize="17"
                CornerRadius="12"
                BackgroundColor="#388E3C"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="52"
                HorizontalOptions="Fill" />

            <!-- Titlu categorii -->
            <Label
                Text="Categorii:"
                FontSize="17"
                FontAttributes="Bold"
                TextColor="#388E3C" />

            <!-- CATEGORII -->
            <CollectionView
                x:Name="CategoriesCollectionView"
                ItemsSource="{Binding Categories}"
                SelectionMode="None"
                HeightRequest="56"
                Margin="0,0,0,8">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Padding="0"
                            CornerRadius="16"
                            HasShadow="False"
                            HeightRequest="44"
                            WidthRequest="120"
                            BorderColor="{Binding ., Converter={StaticResource CategoryBorderConverter}, ConverterParameter={x:Reference CategoriesCollectionView}}"
                            BackgroundColor="{Binding ., Converter={StaticResource CategoryBgConverter}, ConverterParameter={x:Reference CategoriesCollectionView}}">
                            <Label
                                Text="{Binding Name}"
                                FontSize="15"
                                FontAttributes="Bold"
                                VerticalOptions="Center"
                                HorizontalOptions="Center"
                                Padding="14,7"
                                TextColor="{Binding ., Converter={StaticResource CategoryTextConverter}, ConverterParameter={x:Reference CategoriesCollectionView}}"/>
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference CategoriesCollectionView}, Path=BindingContext.SelectCategoryCommand}"
                                    CommandParameter="{Binding .}" />
                            </Frame.GestureRecognizers>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Titlu documente -->
            <Label
                Text="Documente:"
                FontSize="17"
                FontAttributes="Bold"
                TextColor="#388E3C"
                Margin="0,10,0,0" />

            <!-- LISTA DOCUMENTE -->
            <CollectionView
                x:Name="DocumentsCollectionView"
                ItemsSource="{Binding FilteredDocuments}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,6"
                            Padding="14,10"
                            CornerRadius="12"
                            BorderColor="#388E3C"
                            BackgroundColor="White">
                            <VerticalStackLayout Spacing="8">
                                <Label
                                    Text="{Binding FileName}"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    TextColor="#388E3C" />
                                <HorizontalStackLayout Spacing="12">
                                    <Button
                                        Text="Share"
                                        Clicked="OnShareClicked"
                                        CommandParameter="{Binding FilePath}"
                                        BackgroundColor="#E8F5E9"
                                        TextColor="#1B5E20"
                                        CornerRadius="8"
                                        Padding="14,7"
                                        FontSize="14"
                                        BorderColor="#388E3C"
                                        BorderWidth="1" />
                                    <Button
                                        Text="Descarcă"
                                        Clicked="OnDownloadClicked"
                                        CommandParameter="{Binding FilePath}"
                                        BackgroundColor="#E8F5E9"
                                        TextColor="#1B5E20"
                                        CornerRadius="8"
                                        Padding="14,7"
                                        FontSize="14"
                                        BorderColor="#388E3C"
                                        BorderWidth="1" />
                                    <!-- Buton ștergere -->
                                    <Button
                                        Text="Șterge"
                                        Clicked="OnDeleteClicked"
                                        CommandParameter="{Binding FilePath}"
                                        BackgroundColor="#FFCDD2"
                                        TextColor="#B71C1C"
                                        CornerRadius="8"
                                        Padding="14,7"
                                        FontSize="14"
                                        BorderColor="#D32F2F"
                                        BorderWidth="1" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <Label
                        Text="Nu există documente în această categorie."
                        FontAttributes="Italic"
                        TextColor="Gray"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Padding="12" />
                </CollectionView.EmptyView>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
